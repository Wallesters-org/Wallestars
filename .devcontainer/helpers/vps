#!/bin/bash
# VPS Manager CLI Wrapper
# Full access to VPS manager

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
MANAGER_SCRIPT="$SCRIPT_DIR/../integrations/hostinger/hostinger-vps-manager.py"

if [ ! -f "$MANAGER_SCRIPT" ]; then
    echo "âŒ Error: VPS manager not found at $MANAGER_SCRIPT" >&2
    exit 1
fi

# Make sure it's executable
chmod +x "$MANAGER_SCRIPT"

# Pass all arguments to Python script
python3 "$MANAGER_SCRIPT" "$@"
