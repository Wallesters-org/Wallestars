# Anthropic API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Linux Computer Use
ENABLE_COMPUTER_USE=true
SCREENSHOT_INTERVAL=2000

# Android ADB Configuration
ADB_HOST=localhost
ADB_PORT=5037
ENABLE_ANDROID=false

# WebSocket Configuration
WS_PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wallestars
DB_USER=wallestars_user
DB_PASSWORD=secure_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Supabase (Optional)
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key

# n8n Configuration
N8N_API_KEY=your-n8n-api-key
N8N_HOST=localhost
N8N_PORT=5678

# VPS Configuration
VPS_HOST=srv1201204.hstgr.cloud
VPS_USER=root
VPS_PATH=/opt/wallestars

# 33mail Integration
AUTOPILOT_API_KEY=your-33mail-api-key

# Email Configuration (for monitoring alerts)
REPORT_EMAIL=admin@example.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=wallestars@example.com

# Security
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Monitoring
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=300000
